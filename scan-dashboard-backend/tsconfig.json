{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "@ioc:*": ["node_modules/@adonisjs/*/build"],
      "#start/*": ["start/*"],
      "#app/*": ["app/*"],
      "#config/*": ["config/*"],
      "#database/*": ["database/*"],
      "#ioc/*": ["ioc/*"],
      "#public/*": ["public/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "build"]
}
